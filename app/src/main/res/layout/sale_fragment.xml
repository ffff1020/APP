<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/paymentView"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SaleDetailListView"
            ></ListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/paymentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/ttlSum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_weight="1"
            android:text=""
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <Spinner
            android:id="@+id/bankSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/ttl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:hint="实收金额"
            android:layout_weight="1"
            android:singleLine="true"
            android:inputType="numberSigned|number"
            android:imeOptions="actionDone"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/orderButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:text="保存订单"
                android:layout_weight="1"
                android:background="@drawable/order_button"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/addButtonText"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="30dp"
                android:text="@string/SaveButton"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/save_button"
                android:textColor="@color/yellowText"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/closeFragmentButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:text="@string/closeSaleFragment"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_border"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="3dp"
                />
            <Button
                android:id="@+id/print"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:text="打印"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/print_button"
                android:textColor="@color/saveButtonText"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
